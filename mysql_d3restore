#!/bin/bash

# database='c2aps1'

filename=$database--solid.sql

if [ -z "$1" ]; then 
    echo usage: $0 DATABASE;
    exit;
fi
filename=$1

if [ ! -e "$filename" ]; then 
    echo not found : $filename; exit;
    # echo DOIT: $0 DATABASE
fi

for table in $( mysql -D $database -e "SHOW TABLES;" | sed '1d' ); do
    echo "drop table: " $table
    mysql -D $database -e "DROP TABLE $table;"
done

echo 'importing solid SQL...'
mysql $database < $filename
echo 'done.'

